# Add ~/.local/bin to PATH for mise and other tools
export PATH="$HOME/.local/bin:$PATH"

# Set BASH_ENV for non-interactive subshells (needed by make)
export BASH_ENV="$HOME/.bash_env"

. "$HOME/.cargo/env"

# mise - tool version manager
eval "$(mise activate bash)"

[ -f ~/.fzf.bash ] && source ~/.fzf.bash

source /Users/bart.smykla@konghq.com/.config/broot/launcher/bash/br

# atuin - shell history tool
if [ -f "$HOME/.atuin/bin/env" ]; then
    . "$HOME/.atuin/bin/env"
    [[ -f ~/.bash-preexec.sh ]] && source ~/.bash-preexec.sh
    eval "$(atuin init bash)"
fi

### MANAGED BY RANCHER DESKTOP START (DO NOT EDIT)
export PATH="/Users/bart.smykla@konghq.com/.rd/bin:$PATH"
### MANAGED BY RANCHER DESKTOP END (DO NOT EDIT)
